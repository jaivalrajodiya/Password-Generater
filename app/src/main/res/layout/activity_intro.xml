<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".Intro_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/intro_img"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layout_letstart"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password Generate"
                    android:textColor="@color/yellow"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"/>

                <TextView
                    android:id="@+id/txt_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A secure password generator app that creates strong, unique passwords with customizable length and character options."
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>




            <ImageView
                android:id="@+id/layout_letstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/lets_start_btn"
                android:layout_above="@+id/layouts"
                android:layout_marginHorizontal="@dimen/_20sdp"/>

            <LinearLayout
                android:id="@+id/layouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/layout_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_70sdp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:src="@drawable/pp"/>

                <ImageView
                    android:id="@+id/layout_ra"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_70sdp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:src="@drawable/ra"/>

                <ImageView
                    android:id="@+id/layout_sa"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_70sdp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:src="@drawable/sa"/>

            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>